<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/faProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friendActivityProfile"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textColor="#0A0E4A"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/faGames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friendActivityGames"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textColor="#0A0E4A"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/faFriends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/friendActivityFriends"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textColor="#0A0E4A"
            android:background="@drawable/button_background"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/friendActivityContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout">

    </fragment>
    -->


</LinearLayout>
